<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlayFragment">

    <TextView
        android:id="@+id/tv_enter_nr_of_questions_message"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_rounded_corner_white"
        android:gravity="center"
        android:text="@string/enter_nr_of_q_message_sv"
        android:textColor="#F2000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_logo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:contentDescription="@string/iv_content_play_quiz_sv"
        android:src="@drawable/play_quiz_orange_fade_extra_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:background="@android:color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo_text"
            app:layout_constraintWidth_percent="0.9"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/iv_enter_questions"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.65"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:contentDescription="@string/iv_content_questions_logo"
                    android:src="@drawable/ener_questions_tommy" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_select_ten"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="27dp"
                        android:layout_marginEnd="27dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/round_button"
                        android:fontFamily="@font/bitter"
                        android:text="@string/nr_ten"
                        android:textColor="#888888"
                        android:textSize="25sp"
                        tools:ignore="ButtonStyle" />


                    <Button
                        android:id="@+id/btn_select_twenty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="27dp"
                        android:layout_marginEnd="27dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/round_button"
                        android:fontFamily="@font/bitter"
                        android:text="@string/nr_twenty"
                        android:textColor="#888888"
                        android:textSize="25sp"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/btn_select_thirty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:layout_marginStart="27dp"
                        android:layout_marginEnd="27dp"
                        android:background="@drawable/round_button"
                        android:fontFamily="@font/bitter"
                        android:text="@string/nr_thirty"
                        android:textColor="#888888"
                        android:textSize="25sp"
                        tools:ignore="ButtonStyle" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/btn_rounded_corners_orange_fade"
                    android:fontFamily="@font/bitter"
                    android:text="@string/continue_sv"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold">

                </Button>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>